---
import Html from "./icons/Html.astro";
import Tailwind from "./icons/Tailwind.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-black text-white",
    icon: Html,
  },

  TAILWIND: {
    name: "TailWind",
    class: "bg-white text-[#06B6D4]",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "Rick & Morty api",
    description: "Web estÃ¡tica con efectos y pseudolementos CSS",
    link: "#",
    github: "#",
    image: "../imagen/rick1.webp",
    tags: [TAGS.HTML, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-3xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2" >
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${title} `}
      />
    </article>
  ))
}
